{
    "name": "{{cookiecutter.project_slug}}",
    "version": "0.0.1",
    "description": "{{cookiecutter.description}}",
    "main": "index.js",
    "author": "{{ cookiecutter.author_name }}",
    "license": "UNLICENSED",
    "scripts": {
        "toc": "doctoc .",
        "setup_test_db": "psql -c \"DROP DATABASE IF EXISTS test_postgis_database\" && psql -c \"DROP USER IF EXISTS test_postgis_user\" && psql -c \"CREATE USER test_postgis_user PASSWORD 'testDB-password'\" && psql -c \"CREATE DATABASE test_postgis_database OWNER test_postgis_user\" && psql -c \"GRANT ALL PRIVILEGES ON DATABASE test_postgis_database to test_postgis_user\" && psql -c \"ALTER ROLE test_postgis_user SUPERUSER\" && psql -d test_postgis_database -c \"CREATE EXTENSION postgis\" && psql -d test_postgis_database -c \"CREATE EXTENSION postgis_topology\"",
        "dev": "export ENV_PATH=.envs/.dev.env && concurrently --raw --kill-others \"./manage.py runserver_plus\" \"grunt sync\" \"maildev -o\"",
        "test": "export ENV_PATH=.envs/.test.env && npm run setup_test_db && pytest -vv --cov=. --cov-report term-missing:skip-covered -s",
        "coverage_html": "export ENV_PATH=.envs/.test.env && concurrently --raw --kill-others \"pytest -vv --cov=. --cov-report html\" \"maildev -o\"",
        "isort": "isort -rc --atomic .",
        "stylelint-check": "stylelint-config-prettier-check",
        "css-fix": "npx stylelint {{cookiecutter.project_slug}}/static/css/ --fix"
    },
    "private": true,
    "dependencies": {
        "@fortawesome/fontawesome-free": "^5.15.1",
        "animate.css": "^4.1.1",
        "bootstrap": "^4.5.3",
        "bootstrap-notify": "^3.1.3",
        "bootstrap-sweetalert": "^1.0.1",
        "bootswatch": "^4.5.3",
        "chartist": "^0.11.4",
        "imagesloaded": "^4.1.4",
        "jquery": "^3.5.1",
        "jquery-countdown": "^2.2.0",
        "js.sortable": "^0.8.0",
        "lightslider": "^1.1.6",
        "masonry-layout": "^4.2.2",
        "moment": "^2.29.1",
        "photoswipe": "^4.1.3",
        "select2": "^4.0.13",
        "shufflejs": "^5.2.3",
        "tingle.js": "^0.15.3",
        "typed.js": "^2.0.11"
    },
    "devDependencies": {
    "bourbon": "^7.0.0",
    "browser-sync": "^2.26.13",
    "commitizen": "^4.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "cz-emoji": "^1.3.1",
    "grunt": "^1.3.0",
    "grunt-browser-sync": "^2.2.0",
    "grunt-contrib-clean": "^2.0.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-cssmin": "^3.0.0",
    "grunt-contrib-htmlmin": "^3.1.0",
    "grunt-contrib-uglify": "^5.0.0",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-conventional-changelog": "^6.1.0",
    "grunt-json-minification": "^0.2.1",
    "grunt-newer": "^1.3.0",
    "grunt-sass": "^3.1.0",
    "grunt-stylelint": "^0.16.0",
    "holderjs": "^2.9.9",
    "load-grunt-tasks": "^5.1.0",
    "node-sass": "^5.0.0",
    "normalize.css": "^8.0.1",
    "popper.js": "^1.16.1",
    "stylelint": "^13.11.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-sass-guidelines": "^7.1.0",
    "stylelint-config-standard": "^20.0.0",
    "time-grunt": "^2.0.0"
    },
    "browserslist": [
      "defaults",
      "cover 99.5%",
      "not ie < 8"
    ],
    "config": {
      "commitizen": {
        "path": "./node_modules/cz-conventional-changelog"
      }
    }
}
