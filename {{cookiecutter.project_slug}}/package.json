{
  "name": "{{cookiecutter.project_slug}}",
  "version": "{{ cookiecutter.version }}",
  "description": "{{cookiecutter.description}}",
  "main": "index.js",
  "author": "{{ cookiecutter.author_name }}",
  "license": "UNLICENSED",
  "scripts": {
    "collectstatic:dev": "export ENV_PATH=.envs/.dev.env && ./manage.py collectstatic --ignore scss/ --noinput --clear",
    "collectstatic:prod": "export ENV_PATH=.envs/.prod.env && ./manage.py collectstatic --ignore scss/ --noinput --clear --settings 'config.settings.production'",
    "coverage_html": "export ENV_PATH=.envs/.test.env && concurrently --raw --kill-others \"pytest -vv --cov=. --cov-report html\" \"maildev -o\"",
    "css-fix": "npx stylelint {{cookiecutter.project_slug}}/static/css/ --fix",
    "dev": "export ENV_PATH=.envs/.dev.env && concurrently --raw --kill-others \"./manage.py runserver_plus\" \"gulp\" \"maildev -o\"",
    "dev:celery": "export ENV_PATH=.envs/.dev.env && concurrently --raw --kill-others \"./manage.py runserver_plus\" \"gulp\" \"maildev -o\" \"celery -A config worker -l info -E -B\"",
    "isort": "isort -rc --atomic .",
    "release": "standard-version",
    "setup_test_db": "psql -c \"DROP DATABASE IF EXISTS test_postgis_database\" && psql -c \"DROP USER IF EXISTS test_postgis_user\" && psql -c \"CREATE USER test_postgis_user PASSWORD 'testDB-password'\" && psql -c \"CREATE DATABASE test_postgis_database OWNER test_postgis_user\" && psql -c \"GRANT ALL PRIVILEGES ON DATABASE test_postgis_database to test_postgis_user\" && psql -c \"ALTER ROLE test_postgis_user SUPERUSER\" && psql -d test_postgis_database -c \"CREATE EXTENSION postgis\" && psql -d test_postgis_database -c \"CREATE EXTENSION postgis_topology\"",
    "stylelint-check": "stylelint-config-prettier-check",
    "test": "export ENV_PATH=.envs/.test.env && npm run setup_test_db && pytest",
    "toc": "doctoc README.md"
  },
  "private": true,
  "dependencies": {
    "@fortawesome/fontawesome-free": "5.15.4",
    "animate.css": "4.1.1",
    "bootstrap": "4.6.0",
    "bootstrap-notify": "3.1.3",
    "bootstrap-sweetalert": "1.0.1",
    "chartist": "0.11.4",
    "glightbox": "3.0.9",
    "holderjs": "2.9.9",
    "imagesloaded": "4.1.4",
    "jquery": "3.6.0",
    "jquery-countdown": "2.2.0",
    "js.sortable": "0.8.0",
    "lightslider": "1.1.6",
    "masonry-layout": "4.2.2",
    "mjml": "4.10.2",
    "moment": "2.29.1",
    "photoswipe": "4.1.3",
    "select2": "4.0.13",
    "shufflejs": "5.4.1",
    "tingle.js": "0.16.0",
    "typed.js": "2.0.12"
  },
  "devDependencies": {
    "@babel/core": "7.15.0",
    "@babel/preset-env": "7.15.0",
    "bourbon": "7.0.0",
    "browser-sync": "2.27.5",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "cz-emoji": "1.3.1",
    "date-fns": "2.23.0",
    "del": "6.0.0",
    "gulp": "4.0.2",
    "gulp-autoprefixer": "8.0.0",
    "gulp-babel": "8.0.0",
    "gulp-clean-css": "4.3.0",
    "gulp-conventional-changelog": "2.0.35",
    "gulp-npm-dist": "1.0.3",
    "gulp-rename": "2.0.0",
    "gulp-sass": "5.0.0",
    "gulp-sourcemaps": "3.0.0",
    "gulp-stylelint": "13.0.0",
    "gulp-uglify": "3.0.2",
    "node-sass": "6.0.1",
    "normalize.css": "8.0.1",
    "popper.js": "1.16.1",
    "sass-mq": "5.0.1",
    "standard-version": "9.3.1",
    "stylelint": "13.13.1",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-config-sass-guidelines": "8.0.0",
    "stylelint-config-standard": "22.0.0"
  },
  "browserslist": [
    "defaults",
    "cover 99.5%",
    "not ie < 8"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-sass-guidelines",
      "stylelint-config-prettier"
    ],
    "ignoreFiles": [
      "**/vendor/**/*.*",
      "**/static/css/*.min.css",
      "**/static/css/main.css"
    ]
  },
  "standard-version": {
    "header": "# Changelog\n\nAll notable changes to this project will be documented here.\n\nThe format is based on [Keep a Changelog](https://keepachangelog.com/en/1.0.0/), and this project attempts to adhere to [Semantic Versioning](https://semver.org/spec/v2.0.0.html).\n",
    "types": [
      {
        "type": "feat",
        "section": "🚀 Features"
      },
      {
        "type": "fix",
        "section": "🐛 Bug Fixes"
      },
      {
        "type": "docs",
        "section": "📝 Docs",
        "hidden": false
      },
      {
        "type": "style",
        "section": "💄 Styling",
        "hidden": false
      },
      {
        "type": "refactor",
        "hidden": false,
        "section": "♻️ Code Refactoring"
      },
      {
        "type": "perf",
        "section": "⚡️ Performance Improvements",
        "hidden": false
      },
      {
        "type": "test",
        "section": "✅ Tests",
        "hidden": false
      },
      {
        "type": "build",
        "section": "⚙️ Build System",
        "hidden": false
      },
      {
        "type": "ci",
        "section": "👷 CI/CD",
        "hidden": false
      },
      {
        "type": "chore",
        "section": "🚧 Others",
        "hidden": true
      },
      {
        "type": "revert",
        "section": "⏪️ Reverts",
        "hidden": true
      }
    ],
    "scripts": {
      "prechangelog": "sed -e '1,6d' -i CHANGELOG.md",
      "postchangelog": "sed -e 's/###\\ \\[/##\\ \\[v/g' -i CHANGELOG.md && sed -re 's/##\\ \\[([0-9])/##\\ \\[v\\1/g' -i CHANGELOG.md"
    }
  }
}
